        <activity
            android:name=".Actors.SingleActorActivity"
            android:label="@string/title_activity_single_actor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TV.Activities.SingleShowActivity"
            android:label="@string/title_activity_single_show"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TV.AllTVShows"
            android:label="@string/title_activity_all_tvshows"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TV.Activities.SingleSeasonActivity"
